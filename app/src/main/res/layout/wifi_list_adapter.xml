<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    android:theme="@style/WifiListTheme"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_adapter0"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_wifi_black_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_adapter0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_wifi_name_textview"
                android:gravity="center"
                android:text="@string/Name"
                android:textSize="@dimen/sizeTextViewName" />

            <TextView
                android:id="@+id/textView_adapter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Mac"
                android:textSize="@dimen/sizeTextViewDetail" />

            <TextView
                android:id="@+id/textView_adapter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Details"
                android:textSize="@dimen/sizeTextViewDetail" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorButtonBackground1" />

</LinearLayout>