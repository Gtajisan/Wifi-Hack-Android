<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_fragment"
    android:orientation="vertical"
    android:theme="@style/FragmentsTheme"
    tools:context="BruteFragment.BruteFragment">

    <TextView
        android:id="@+id/textView_brute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Brute0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_brute_stop"
            style="@style/ButtonTheme3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Stop" />

        <Button
            android:id="@+id/button_bruteAll"
            style="@style/ButtonTheme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorComponentDisable"
            android:enabled="false"
            android:text="@string/BruteAll" />

        <Button
            android:id="@+id/button_brute"
            style="@style/ButtonTheme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Brute" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Thread" />

        <SeekBar
            android:id="@+id/seekBar_thread"
            android:layout_width="@dimen/SeekBarWeight0"
            android:layout_height="wrap_content"
            android:max="3000"
            android:progress="30"
            android:progressBackgroundTint="#FF9800"
            android:progressTint="#F44336"
            android:thumbTint="#FFEB3B" />

        <TextView
            android:id="@+id/textView_threadValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ThreadValue" />
    </LinearLayout>

</LinearLayout>